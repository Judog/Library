<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.kamilsieczkowski.controllers.AddNewBookController" prefHeight="410" prefWidth="650">
    <VBox prefHeight="410" prefWidth="650" alignment="CENTER">
        <HBox alignment="CENTER">
            <VBox spacing="10.0">
                <Label fx:id="idNumberLabel" prefHeight="25.0" prefWidth="59.0" text="ID number">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="authorLabel" prefHeight="25.0"
                       prefWidth="59.0"/>
                <Label fx:id="titleLabel"  prefHeight="25.0"
                       prefWidth="59.0"/>
                <Label fx:id="tomeLabel"  prefHeight="25.0"
                       prefWidth="80.0"/>
                <Label fx:id="keyWordsLabel"  prefHeight="25.0"
                       prefWidth="59.0"/>
                <Label fx:id="editionLabel" prefHeight="25.0"
                       prefWidth="80.0"/>
            </VBox>
            <VBox spacing="10.0">
                <TextField fx:id="idNumberTextField" maxWidth="-Infinity" minWidth="-Infinity"
                           prefHeight="25.0" prefWidth="306.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </TextField>
                <TextField fx:id="authorTextField" maxWidth="-Infinity"
                           minWidth="-Infinity" prefHeight="25.0" prefWidth="306.0"/>
                <TextField fx:id="titleTextField" maxWidth="-Infinity"
                           minWidth="-Infinity" prefHeight="25.0" prefWidth="306.0"/>
                <TextField fx:id="tomeTextField" maxWidth="-Infinity"
                           minWidth="-Infinity" prefHeight="25.0" prefWidth="306.0"/>
                <TextField fx:id="keyWordsTextField" maxWidth="-Infinity"
                           minWidth="-Infinity" prefHeight="25.0" prefWidth="306.0"/>
                <TextField fx:id="editionTextField" maxWidth="-Infinity"
                           minWidth="-Infinity" prefHeight="25.0" prefWidth="306.0"/>
            </VBox>
        </HBox>
        <HBox alignment="CENTER" spacing="100.0">
            <Button fx:id="saveButton" mnemonicParsing="false" prefWidth="70.0">
                <HBox.margin>
                    <Insets left="70.0" top="5.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="endButton" mnemonicParsing="false" prefWidth="70.0">
                <HBox.margin>
                    <Insets right="70.0" top="5.0"/>
                </HBox.margin>
            </Button>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </HBox>
    </VBox>
</Pane>
