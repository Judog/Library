<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.kamilsieczkowski.controllers.AddNewBookController">
    <children>
        <VBox alignment="CENTER">
            <children>
                <HBox alignment="CENTER">
                    <children>
                        <VBox prefWidth="59.0" spacing="10.0">
                            <children>
                                <Label fx:id="id_numberLabel" prefHeight="25.0" prefWidth="59.0" text="ID number">
                                    <VBox.margin>
                                        <Insets top="10.0"/>
                                    </VBox.margin>
                                </Label>
                                <Label fx:id="authorLabel" layoutX="10.0" layoutY="45.0" prefHeight="25.0"
                                       prefWidth="59.0"/>
                                <Label fx:id="titleLabel" layoutX="10.0" layoutY="80.0" prefHeight="25.0"
                                       prefWidth="59.0"/>
                                <Label fx:id="tomeLabel" layoutX="10.0" layoutY="220.0" prefHeight="25.0"
                                       prefWidth="80.0"/>
                                <Label fx:id="keyWordsLabel" layoutX="10.0" layoutY="150.0" prefHeight="25.0"
                                       prefWidth="59.0"/>
                                <Label fx:id="editionLabel" layoutX="10.0" layoutY="185.0" prefHeight="25.0"
                                       prefWidth="80.0"/>
                            </children>
                        </VBox>
                        <VBox spacing="10.0">
                            <children>
                                <TextField fx:id="id_numberTextField" maxWidth="-Infinity" minWidth="-Infinity"
                                           prefHeight="25.0" prefWidth="306.0">
                                    <VBox.margin>
                                        <Insets top="10.0"/>
                                    </VBox.margin>
                                </TextField>
                                <TextField fx:id="authorTextField" layoutX="10.0" layoutY="55.0" maxWidth="-Infinity"
                                           minWidth="-Infinity" prefHeight="25.0" prefWidth="306.0"/>
                                <TextField fx:id="titleTextField" layoutX="10.0" layoutY="90.0" maxWidth="-Infinity"
                                           minWidth="-Infinity" prefHeight="25.0" prefWidth="306.0"/>
                                <TextField fx:id="tomeTextField" layoutX="10.0" layoutY="230.0" maxWidth="-Infinity"
                                           minWidth="-Infinity" prefHeight="25.0" prefWidth="306.0"/>
                                <TextField fx:id="keywordsTextField" layoutX="10.0" layoutY="160.0" maxWidth="-Infinity"
                                           minWidth="-Infinity" prefHeight="25.0" prefWidth="306.0"/>
                                <TextField fx:id="editionTextField" layoutX="10.0" layoutY="195.0" maxWidth="-Infinity"
                                           minWidth="-Infinity" prefHeight="25.0" prefWidth="306.0"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefWidth="440.0" spacing="100.0">
                    <children>
                        <Button fx:id="saveButton" mnemonicParsing="false" prefWidth="70.0">
                            <HBox.margin>
                                <Insets left="70.0" top="5.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="endButton" mnemonicParsing="false" prefWidth="70.0">
                            <HBox.margin>
                                <Insets right="70.0" top="5.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</Pane>
